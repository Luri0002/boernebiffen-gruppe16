---
import Text from "./Text.astro";
import Link from "../components/Link.astro";
---

<footer class="bg-lightblue-200 text-lilla-700 relative h-100 md:h-120">
  <img src="/upsd_clouds.svg" alt="grafisk form med skyer" class="absolute top-0 left-0" />

  <!-- stor div til de 3 kolonner i lg format -->
  <div class="container mx-auto p-4 lg:grid lg:grid-cols-3 gap-6">
    <!-- Kolonne 1 -->
    <div class="mt-15 md:mt-30 lg:mt-40">
      <a href="#">
        <img class="w-50 h-auto lg:w-75" src="/logo.svg" alt="børnebiffen logo" />
      </a>

      <div class="my-5">
        <Text teksttype="footer">DBC DIGITAL A/S</Text>
        <Text teksttype="footer">Tempovej 7-11</Text>
        <Text teksttype="footer">2750 Ballerup</Text>
      </div>
    </div>

    <!-- Kolonne 2 -->
    <div class="md:mt-10 lg:mt-65 flex flex-col">
      <Link size="small">Om Børnebiffen</Link>
      <Link size="small">Privatlivspolitik</Link>
      <Link size="small">Kontakt os</Link>
    </div>

    <!-- Kolonne 3 -->
    <div class="md:mt-10 lg:mt-65 flex flex-col">
      <Link size="small">Tilgængelighedserklæring</Link>
      <Link size="small">Cookies</Link>
    </div>
  </div>
</footer>
